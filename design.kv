<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            Button:
                text:"Forgot Password?"
            Button:
                text:"Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up for FlixMatch"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            password: True
            hint_text: "Password"
        Label:
            id: incorrect_input
            text: ""
        Button:
            text: "SignUp"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up succesfull!"
        Button:
            text: "Back to Login"
            on_press: root.back_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "How do you fell?"
        Button:
            text: "Logout"
            on_press: root.log_out()
        TextInput:
            hint_text: "Thing to try: happy, sad, unloved..."
        Button:
            text: "Enlighten me"

<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScreenSuccess:
        name:"sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"